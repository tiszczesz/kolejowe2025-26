@model List<Book>

<h1>Lista książek</h1>
<table class="table table-striped">
    <thead>
        <th>Lp</th>
        <th>Tytuł</th>
        <th>Autor</th>
        <th>Cena</th>
        <th>Data wydania</th>
        <th> --- </th>
    </thead>
    <tbody>
        @{
            int lp = 0;
        }
        @foreach (Book book in Model)
        {
            lp++;
            <tr>
                <td>@lp</td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Price</td>
                <td>@book.RealizeDate.ToShortDateString()</td>
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@book.Id">USUŃ</a>
                    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@book.Id">EDYTUJ</a>
                </td>
            </tr>
        }
    </tbody>
</table>