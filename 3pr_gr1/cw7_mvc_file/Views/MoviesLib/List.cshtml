@model List<Movie>
<h2>Lista Filmów</h2>
<table class="table table-striped">
    <thead>
        <tr>

            <th>Lp</th>
            <th>Tytuł</th>
            <th>Reżyser</th>
            <th>Rok</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int lp = 0;
        }
        @foreach (Movie movie in Model)
        {
            lp++;
            <tr>
                <td>@lp</td>
                <td>@movie.Title</td>
                <td>@movie.Director</td>
                <td>@movie.Year</td>
                <td>
                    <a asp-action="DeleteMovie" asp-route-id="@movie.Id" class="btn btn-danger btn-sm">Usuń</a>
                    <a asp-action="UpdateMovie" asp-route-id="@movie.Id" class="btn btn-primary btn-sm">Edytuj</a>
                </td>
            </tr>
        }
    </tbody>
</table>